<Window x:Class="WpfApp36.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp36"
        mc:Ignorable="d"
        Title="MainWindow" Background="Crimson" Height="300" Width="300">
    <Grid>
        <StackPanel>
        <TextBlock Text="Введите 1 число:" Margin="5"/>
        <TextBox x:Name="Boxa" Margin="5" Grid.Row="1"/>
        <TextBlock Text="Введите 2 число:" Margin="5" Grid.Row="2"/>
        <TextBox x:Name="Boxb" Margin="5" Grid.Row="3"/>
        <Button Content="OK" Margin="5" Grid.Row="4" Click="Bustton_Click"/>
        <TextBlock x:Name="txtOtv" Margin="5" Grid.Row="5"/>
        </StackPanel>
    </Grid>
</Window>
